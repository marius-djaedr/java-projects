%%%%%%%%%%% Redefine \maketitle %%%%%%%
\renewcommand{\maketitle}{\thispagestyle{empty}
\vspace*{-40pt}
\begin{center}
{\setlength\fboxsep{3mm}\raisebox{12pt}{\parbox[c]{1.15in}{\begin{center}\small \@papercode\end{center}}}}\hfill%
{\textgoth{\huge\usefont{LYG}{bigygoth}{m}{n} \@papername}}\hfill%
\raisebox{12pt}{}\\
\vspace*{0.1in}
\rule[0pt]{\textwidth}{0.5pt}\\
{\small ISSUE \@currentissue} \hfill {\small\MakeUppercase{\@currentdate}}\\
\rule[6pt]{\textwidth}{1.2pt}
\end{center}
\pagestyle{plain}
}

